/* 处理中状态样式 */
.processing-section {
  width: 100%;
  height: 100%;
  background-color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.processing-content {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-animation {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.loading-circle {
  width: 20rpx;
  height: 20rpx;
  margin: 0 10rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-circle:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-circle:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

.processing-text {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
}

.processing-steps {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
  transition: opacity 0.3s;
}

.step-item.active {
  opacity: 1;
}

.step-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #4A90E2;
  margin-bottom: 10rpx;
}

.step-text {
  color: #ffffff;
  font-size: 24rpx;
}

.step-line {
  width: 60rpx;
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 10rpx;
  position: relative;
  top: -15rpx;
}

.step-line.active {
  background-color: #4A90E2;
}

.processing-tips {
  margin-top: 40rpx;
  text-align: center;
}

/* 权限提示页面 */
.permission-section {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 40rpx; /* 减少左右内边距 */
}

.permission-content {
  text-align: center;
  color: #fff;
  width: 100%;
  max-width: 600rpx; /* 限制最大宽度 */
  margin-left: -20rpx; /* 稍微左移 */
}

.permission-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  display: block;
}

.permission-desc {
  font-size: 32rpx;
  color: #ccc;
  margin-bottom: 60rpx;
  display: block;
  line-height: 1.5;
}

.permission-btn {
  background-color: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}