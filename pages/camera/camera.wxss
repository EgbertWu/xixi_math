/* pages/camera/camera.wxss */
/* 希希数学小助手 拍照识别页面样式 */

.camera-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  background: #000;
}

/* 摄像头区域 */
.camera-section {
  width: 100%;
  height: 100%;
  position: relative;
}

.camera {
  width: 100%;
  height: 100%;
}

/* 摄像头覆盖层 */
.camera-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部工具栏 */
.top-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 20rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0.6) 0%, transparent 100%);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.3);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(102, 126, 234, 0.5);
  transform: scale(0.95);
}

.camera-tools {
  display: flex;
  gap: 20rpx;
}

.tool-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.3);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.tool-btn:active {
  background: rgba(102, 126, 234, 0.5);
  transform: scale(0.95);
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

/* 拍照引导框 */
.guide-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 400rpx;
  border: 4rpx solid rgba(255,255,255,0.8);
  border-radius: 20rpx;
  background: transparent;
}

.frame-corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #4A90E2;
}

.frame-corner.tl {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-top-left-radius: 20rpx;
}

.frame-corner.tr {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-top-right-radius: 20rpx;
}

.frame-corner.bl {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-bottom-left-radius: 20rpx;
}

.frame-corner.br {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-bottom-right-radius: 20rpx;
}

/* 提示信息 */
.tips-section {
  position: absolute;
  bottom: 300rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.tip-text {
  color: white;
  font-size: 28rpx;
  background: rgba(0,0,0,0.5);
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
}

/* 底部操作栏 */
.bottom-toolbar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 80rpx 100rpx;
  background: linear-gradient(0deg, rgba(0,0,0,0.6) 0%, transparent 100%);
}

.album-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.album-btn .icon {
  width: 60rpx;
  height: 60rpx;
}

.btn-text {
  color: white;
  font-size: 24rpx;
}

.capture-btn {
  width: 140rpx;
  height: 140rpx;
  border: 6rpx solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.capture-inner {
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.capture-btn:active .capture-inner {
  transform: scale(0.9);
}

.placeholder {
  width: 80rpx;
}

/* 图片预览区域 */
.preview-section {
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  flex-direction: column;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 20rpx;
  background: rgba(0,0,0,0.8);
}

.preview-title {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
}

.preview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.preview-image {
  width: 100%;
  max-height: 70vh;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3);
}

.preview-tips {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 40rpx;
  padding: 20rpx 32rpx;
  background: rgba(76, 175, 80, 0.1);
  border: 2rpx solid rgba(76, 175, 80, 0.3);
  border-radius: 50rpx;
}

.tip-icon {
  width: 32rpx;
  height: 32rpx;
}

.preview-tips .tip-text {
  color: #4CAF50;
  font-size: 26rpx;
}

.preview-actions {
  display: flex;
  gap: 30rpx;
  padding: 40rpx;
  background: rgba(0,0,0,0.8);
}

.preview-actions .btn-secondary,
.preview-actions .btn-primary {
  flex: 1;
  padding: 28rpx;
  font-size: 32rpx;
}

/* 处理中状态 */
.processing-section {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.processing-content {
  text-align: center;
  color: white;
  padding: 80rpx 60rpx;
}

/* 加载动画 */
.loading-animation {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 60rpx;
}

.loading-circle {
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
  animation: loading-bounce 1.4s ease-in-out infinite both;
}

.loading-circle:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-circle:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.processing-text {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
}

/* 处理步骤 */
.processing-steps {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.step-item.active {
  opacity: 1;
}

.step-dot {
  width: 24rpx;
  height: 24rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.step-item.active .step-dot {
  background: white;
  box-shadow: 0 0 20rpx rgba(255,255,255,0.5);
}

.step-text {
  font-size: 24rpx;
  white-space: nowrap;
}

.step-line {
  width: 80rpx;
  height: 2rpx;
  background: rgba(255,255,255,0.3);
  margin: 0 20rpx;
}

.processing-tips {
  margin-top: 40rpx;
}

.processing-tips .tip-text {
  font-size: 26rpx;
  opacity: 0.8;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .guide-frame {
    width: 500rpx;
    height: 350rpx;
  }
  
  .bottom-toolbar {
    padding: 40rpx 60rpx 80rpx;
  }
  
  .capture-btn {
    width: 120rpx;
    height: 120rpx;
  }
  
  .capture-inner {
    width: 80rpx;
    height: 80rpx;
  }
  
  .processing-content {
    padding: 60rpx 40rpx;
  }
  
  .processing-text {
    font-size: 32rpx;
  }
}

/* 动画效果 */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0.7);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(74, 144, 226, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0);
  }
}

.frame-corner {
  animation: pulse 2s infinite;
}