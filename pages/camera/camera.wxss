/* pages/camera/camera.wxss */

.camera-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #000;
  color: #fff;
  display: flex;
  flex-direction: column;
}

/* 摄像头区域 */
.camera-section {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

/* 顶部工具栏 */
.top-toolbar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx; /* 添加左边距，让返回按钮更靠左 */
}

.title-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  flex: 1; /* 让标题占据剩余空间 */
}

.camera-tools {
  display: flex;
  gap: 20rpx; /* 减少工具按钮间距 */
  margin-right: 20rpx; /* 添加右边距 */
}

.tool-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-image {
  width: 48rpx;
  height: 48rpx;
}

/* 提示信息 */
.tips-section {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  text-align: center;
  z-index: 10;
}

.tip-text {
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-toolbar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx 30rpx 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
}

.album-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  margin-left: 20rpx; /* 让相册按钮更靠左 */
}

.capture-btn {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: -20rpx; /* 让拍照按钮稍微左移 */
}

.placeholder {
  width: 120rpx;
  margin-right: 20rpx; /* 调整右侧占位符 */
}

.btn-text {
  color: #ffffff;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.capture-inner {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}

.placeholder {
  width: 120rpx;
}

/* 预览区域样式 */
.preview-section {
  width: 100%;
  height: 100%;
  background-color: #000;
  display: flex;
  flex-direction: column;
}

.preview-header {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx; /* 稍微增加内边距，保持平衡 */
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%); /* 添加渐变背景 */
}

.preview-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5); /* 添加文字阴影 */
}

.preview-actions {
  width: 100%;
  padding: 20rpx 40rpx 40rpx; /* 减少内边距，让按钮更靠边缘 */
  display: flex;
  justify-content: space-between;
  gap: 30rpx; /* 增加按钮间距 */
  box-sizing: border-box;
}

.btn-secondary {
  width: 42%; /* 稍微减少宽度 */
  height: 88rpx;
  line-height: 88rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 0; /* 移除左边距 */
  border: 2rpx solid rgba(255, 255, 255, 0.3); /* 添加边框增强视觉效果 */
}

.btn-primary {
  width: 42%; /* 稍微减少宽度 */
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 0; /* 移除右边距 */
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3); /* 添加阴影效果 */
}

/* 按钮按下效果 */
.btn-secondary:active {
  background-color: rgba(255, 255, 255, 0.1);
  transform: scale(0.98);
}

.btn-primary:active {
  background-color: #3A7BC8;
  transform: scale(0.98);
}

.preview-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 500;
}

.preview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 20rpx; /* 减少上下内边距，给图片更多空间 */
}

.preview-image {
  width: 90%; /* 减少宽度，避免太宽 */
  max-height: 85vh; /* 增加最大高度，让图片更大 */
  min-height: 60vh; /* 设置最小高度，确保图片不会太小 */
  object-fit: contain;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
}

.preview-tips {
  margin-top: 20rpx; /* 减少顶部间距 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip-subtitle {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 预览操作按钮区域 */
.preview-actions {
  width: 100%;
  padding: 30rpx 50rpx 50rpx;
  display: flex;
  justify-content: space-between;
}

