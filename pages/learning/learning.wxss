/* pages/learning/learning.wxss */
/* 希希数学小助手 学习对话页面样式 */

.learning-container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 200rpx;
}

/* 顶部导航栏 */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn, .help-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.back-btn:active, .help-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.nav-title {
  display: flex;
  flex-direction: column;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.subtitle-text {
  font-size: 22rpx;
  opacity: 0.8;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

/* 题目展示区域 */
.question-section {
  margin: 20rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: slideInUp 0.6s ease-out;
}

.question-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #F8F9FA;
  border-bottom: 2rpx solid #E9ECEF;
}

.question-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.question-label {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.question-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  border-radius: 50%;
}

.action-btn .icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

.question-content {
  padding: 30rpx;
}

.question-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.question-image {
  position: relative;
  margin: 0 30rpx 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F8F9FA;
}

.question-image .image {
  width: 100%;
  max-height: 400rpx;
}

.image-overlay {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.zoom-icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

/* 对话消息区域 */
.messages-section {
  padding: 20rpx;
}

.message-item {
  margin-bottom: 30rpx;
  animation: slideInUp 0.3s ease-out;
}

/* 系统消息 */
.system-message {
  display: flex;
  justify-content: center;
}

.system-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(76, 175, 80, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(76, 175, 80, 0.2);
}

.system-icon {
  width: 24rpx;
  height: 24rpx;
}

.system-text {
  font-size: 24rpx;
  color: #4CAF50;
}

/* AI消息 */
.ai-message {
  margin-right: 80rpx;
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid #E3F2FD;
}

.sender-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.sender-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.message-time {
  font-size: 20rpx;
  color: #999;
}

.round-badge {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.round-text {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.message-bubble {
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.ai-bubble {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border: 2rpx solid rgba(74, 144, 226, 0.1);
}

.ai-bubble::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 12rpx solid #E3F2FD;
}

/* 用户消息 */
.user-message {
  margin-left: 80rpx;
}

.user-message .message-header {
  flex-direction: row-reverse;
}

.user-message .sender-info {
  text-align: right;
}

.user-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.user-bubble::after {
  content: '';
  position: absolute;
  right: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid #764ba2;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-break: break-all;
}

/* AI思考中状态 */
.thinking-message {
  margin-right: 80rpx;
}

.thinking-bubble {
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.thinking-animation {
  display: flex;
  gap: 8rpx;
}

.thinking-dot {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: thinking-bounce 1.4s ease-in-out infinite both;
}

.thinking-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.thinking-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes thinking-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.thinking-text {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

/* 输入区域 */
.input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 2rpx solid #E9ECEF;
  padding: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.input-wrapper {
  flex: 1;
  position: relative;
  background: #F8F9FA;
  border-radius: 24rpx;
  border: 2rpx solid #E9ECEF;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-field {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: transparent;
  border: none;
  outline: none;
  resize: none;
}

.input-counter {
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
}

.counter-text {
  font-size: 20rpx;
  color: #999;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  background: #E9ECEF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.send-icon {
  width: 36rpx;
  height: 36rpx;
  transition: all 0.3s ease;
}

.send-btn.active .send-icon {
  filter: brightness(0) invert(1);
}

.input-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tip-icon {
  width: 24rpx;
  height: 24rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #666;
}

/* 会话完成状态 */
.completion-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 2rpx solid #E9ECEF;
  padding: 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  animation: slideInUp 0.6s ease-out;
}

.completion-content {
  text-align: center;
}

.completion-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.completion-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.completion-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.completion-actions {
  display: flex;
  justify-content: center;
}

.completion-actions .btn-primary {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 进度指示器 */
.progress-indicator {
  position: fixed;
  bottom: 200rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: slideInUp 0.6s ease-out;
}

.progress-bar {
  height: 8rpx;
  background: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.step.completed,
.step.current {
  opacity: 1;
}

.step-dot {
  width: 20rpx;
  height: 20rpx;
  background: #E9ECEF;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.step.completed .step-dot {
  background: #4CAF50;
}

.step.current .step-dot {
  background: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.2);
}

.step-label {
  font-size: 20rpx;
  color: #666;
  white-space: nowrap;
}

.step.completed .step-label,
.step.current .step-label {
  color: #333;
  font-weight: 500;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .nav-header {
    padding: 40rpx 20rpx 15rpx;
  }
  
  .title-text {
    font-size: 32rpx;
  }
  
  .question-section {
    margin: 15rpx;
  }
  
  .ai-message {
    margin-right: 60rpx;
  }
  
  .user-message {
    margin-left: 60rpx;
  }
  
  .message-bubble {
    padding: 20rpx;
  }
  
  .message-text {
    font-size: 26rpx;
  }
  
  .input-section {
    padding: 15rpx;
  }
  
  .progress-indicator {
    bottom: 180rpx;
    left: 15rpx;
    right: 15rpx;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.05);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-4rpx);
  }
  60% {
    transform: translateY(-2rpx);
  }
}